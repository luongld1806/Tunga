@using TungaRestaurant.Ultils
@model IEnumerable<Order>
@{
    TokenManager tokenManager = new TokenManager();
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">All Order</h4>
            <table class="table table-striped table-primary">
                <thead>
                    <tr>
                        <th> User </th>
                        <th> Token </th>
                        <th> Price </th>
                        <th> Created At </th>
                        <th> Ship Address </th>
                        <th> Status </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var o in Model)
                    {
                        <tr class="redirect-on-click" href="manager/order/edit/@o.Id">
                            <td>@o.User.DisplayName</td>
                            <td>@tokenManager.GetOrderToken(o.User,o.Id.ToString())</td>
                            <td>@o.Price</td>
                            <td>@o.CreatedAt</td>
                            <td>@o.ShipAddress</td>
                            <td>@o.Status</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>