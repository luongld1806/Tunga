@using TungaRestaurant.Ultils
@model TungaRestaurant.Models.Order

@{
    TokenManager tokenManager = new TokenManager();
    ViewData["Title"] = "Edit";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h2>Edit</h2>
            <h4>Order token @tokenManager.GetOrderToken(Model.User,Model.Id.ToString()) </h4>
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Edit">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input asp-for="Name" class="form-control" hidden />
                        <input asp-for="Price" class="form-control" hidden />
                        <input asp-for="CreatedAt" class="form-control" hidden />
                        <input asp-for="ShipAddress" class="form-control" hidden />
                        <input asp-for="UserInfoId" class="form-control" hidden />
                        <div class="form-group">
                            <label for="exampleSelectGender">Status</label>
                            <select class="form-control" asp-for="Status" asp-items="Html.GetEnumSelectList<OrderStatus>()" id="Status"></select>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-gradient-primary" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a class="btn btn-gradient-success" asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
