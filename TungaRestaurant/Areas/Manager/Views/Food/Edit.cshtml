@model TungaRestaurant.Models.Food

@{
    ViewData["Title"] = "Edit";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h2>Edit</h2>
            <h3 style="color:red">@Html.Raw(ViewBag.error)</h3>
            <h4>Food</h4>

            <hr />
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Image" class="control-label"></label>
                            <input asp-for="Image" type="file" class="form-control" />
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Price" class="control-label"></label>
                            <input asp-for="Price" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CookDuration" class="control-label"></label>
                            <input asp-for="CookDuration" class="form-control" />
                            <span asp-validation-for="CookDuration" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="BranchId" class="control-label"></label>
                            <select asp-for="BranchId" class="form-control" asp-items="ViewBag.BranchId"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="CategoryId" class="control-label"></label>
                            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CateId"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="ServeUnit" class="control-label"></label>
                            <input asp-for="ServeUnit" class="form-control" />
                            <span asp-validation-for="ServeUnit" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="IsVeganDish">Is Vegan?</label>
                            <select class="form-control" name="IsVeganDish" id="IsVeganDish">
                                <option value="false">Non-vegan</option>
                                <option value="true">Vegan</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="exampleSelectGender">Status</label>
                            <select class="form-control" asp-items="Html.GetEnumSelectList<FoodStatus>()" name="Status" id="Status">
                            </select>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-gradient-primary" />
                        </div>
                    </form>
                </div>
            </div>
            <div>
                <a asp-action="Index" class="btn btn-gradient-success">Back to List</a>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }