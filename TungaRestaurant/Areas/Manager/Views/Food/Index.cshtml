<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Food list</h4>
            <p class="text-right">
                <a class="btn btn-gradient-primary" asp-controller="Food" asp-action="Create">Add new food</a>
            </p>
            <table class="table table-striped table-primary">
                <thead>
                    <tr>
                        <th> Dish </th>
                        <th> Image </th>
                        <th> Price </th>
                        <th> Prepare time </th>
                        <th> Restaurant </th>
                        <th> Category </th>
                        <th> Serve Unit </th>
                        <th> Vegan?</th>
                        <th> Status </th>
                        <th width="150px" class="text-center"> Action </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Food food in Model)
                    {
                        <tr class="redirect-on-click" href="manager/food/edit/@food.Id">
                            <td> @food.Name </td>
                            <td> <img src="/images/@food.Image" alt="@food.Image" width="100" height="100"></td>
                            <td> @food.Price</td>
                            <td> @food.CookDuration</td>
                            @if(food.BranchId == null){
                                <td> All branch</td>
                            }else{
                                <td> @food.Branch.Name</td>
                            }
                            <td> @food.Category.Name</td>
                            <td> @food.ServeUnit</td>
                            @if (@food.IsVeganDish == true)
                            {<td>Vegan</td>}
                            else
                            {<td>Non-vegan</td>}
                            <td>@food.Status</td>
                            <td><a asp-action="Delete" asp-route-id="@food.Id" class="btn btn-gradient-danger">Delete</a></td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
