<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Category list</h4>
            <p class="text-right">
                <a class="btn btn-gradient-primary" asp-controller="Category" asp-action="Create">Add new category</a>
            </p>
            <table class="table table-striped table-primary">
                <thead>
                    <tr>
                        <th> Category Name </th>
                        <th> Image </th>
                        <th> Status </th>
                        <th width="150px" class="text-center"> Action </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cate in Model)
                    {
                    <tr class="redirect-on-click" href="manager/category/edit/@cate.Id">
                        <td> @cate.Name </td>
                        <td> <img src="/images/@cate.Image" alt="@cate.Image" width="100" height="100"></td>
                        <td>@cate.Status</td>
                        <td ><a asp-action="Delete" asp-route-id="@cate.Id" class="btn btn-gradient-danger">Delete</a></td>
                    </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
