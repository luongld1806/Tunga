@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>


<div class="row">
    <div class="col-lg-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Role</h4>
                <p class="">
                    <a class="btn btn-primary" asp-controller="Role" asp-action="Create">Add Role</a>
                </p>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th> # </th>
                            <th> Name </th>
                            <th> Action </th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int i = 1;
                        }
                        @foreach (var role in Model)
                        {
                            <tr>
                                <td> @i </td>
                                <td> @role.Name</td>
                                <td>
                                    <button class="btn btn-primary">Edit</button>
                                    <button class="btn btn-danger">Delete</button>
                                </td>
                            </tr>
                            i++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="col-lg-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Default form</h4>
                <p class="card-description"> Basic form layout </p>
                <form class="forms-sample" method="post" asp-action="Create" asp-controller="Role">
                    <input type="hidden" name="id" />
                    <div class="form-group">
                        <label for="roleName">Name</label>
                        <input type="text" class="form-control" name="Name" id="roleName" placeholder="Role name">
                    </div>
                    <button type="submit" class="btn btn-gradient-primary mr-2">Submit</button>
                    <button class="btn btn-light">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>
