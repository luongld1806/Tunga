@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<style>
	.navbar {
		position:relative !important;
	}

</style>

<div>
	<main class="pt-5 bg-dark" style="background-image: url(/customer_asset/images/bg_1.jpg);background-position: center center;background-size: cover; min-height:100vh">
		<div class="row flex-grow m-0">
			<div class="col-lg-6 mx-auto">
				<div class="custom-form-style text-left p-5">
					<div class="brand-logo">
						<img src="../../assets/images/logo.svg" hidden>
					</div>
					<h4>Lets get started</h4>
					<form asp-route-returnUrl="@Model.ReturnUrl" class="woocommerce-form woocommerce-form-register register" method="post">
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>

						<div class="form-group">
							<label asp-for="Input.Email" for="reg_email">
							</label>
							<span class="required">*</span>
							<input type="email"
								   class="form-control"
								   asp-for="Input.Email" autocomplete="email" value="" />
							<span asp-validation-for="Input.Email" class="text-danger"></span>

						</div>
						<div class="form-group">
							<label asp-for="Input.DisplayName">
							</label>
							<span class="required">*</span>
							<input type="text"
								   class="form-control"
								   asp-for="Input.DisplayName" autocomplete="user_name" value="" />
							<span asp-validation-for="Input.DisplayName" class="text-danger"></span>

						</div>
						<div class="form-group">
							<label asp-for="Input.Sex">
							</label>
							<span class="required">*</span>
							<Select class="custom-select form-control" asp-for="Input.Sex">
								<option value="0">Female</option>
								<option value="1">Male</option>
								<option value="2">Other</option>
							</Select>
							<span asp-validation-for="Input.Sex" class="text-danger"></span>

						</div>
						<div class="form-group">
							<label asp-for="Input.Address">
							</label>
							<span class="required">*</span>
							<input type="text"
								   class="form-control"
								   asp-for="Input.Address" autocomplete="address" value="" />
							<span asp-validation-for="Input.Address" class="text-danger"></span>

						</div>
						<div class="form-group">
							<label asp-for="Input.PhoneNumber">
							</label>
							<span class="required">*</span>
							<input type="text"
								   class="form-control"
								   asp-for="Input.PhoneNumber" autocomplete="phonenumber" value="" />
							<span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>

						</div>
						<div class="form-group">
							<label asp-for="Input.Password">
							</label>
							<span class="required">*</span>
							<input type="password"
								   class="form-control"
								   asp-for="Input.Password" autocomplete="new-password" />
							<span asp-validation-for="Input.Password" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label asp-for="Input.ConfirmPassword">
							</label>
							<span class="required">*</span>
							<input type="password"
								   class="form-control"
								   asp-for="Input.ConfirmPassword" autocomplete="new-password" />
							<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

						</div>

						<div class="clear"></div>

						<div class="mt-3">
							<button class="btn btn-block btn-lg font-weight-medium auth-form-btn" type="submit">
								REGISTER
							</button>
						</div>
						<p class="">
							<a asp-area="Identity" asp-page="Login" id="show-ma-login" data-wpel-link="internal">
								Already
								have an account? Log in here
							</a>
						</p>


					</form>
				</div>
			</div>
		</div>


	</main>

</div>




@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
