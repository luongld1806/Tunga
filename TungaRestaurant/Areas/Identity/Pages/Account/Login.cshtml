@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<style>
	.navbar {
		position:relative !important;
	}

</style>

<div>
	<main class="pt-5 bg-dark" style="background-image: url(/customer_asset/images/bg_1.jpg);background-position: center center;background-size: cover; min-height:100vh">
		<div class="row flex-grow m-0">
			<div class="col-lg-6 mx-auto">
				<div class="custom-form-style text-left p-5">
					<div class="brand-logo">
						<img src="../../assets/images/logo.svg" hidden>
					</div>
					<h4>Login to your account</h4>
					<form class="pt-3" method="post">
						<div asp-validation-summary="All" class="text-danger"></div>
						<div class="form-group">
							<input asp-for="Input.Email" type="email" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Username">
							<span asp-validation-for="Input.Email" class="text-danger"></span>
						</div>
						<div class="form-group">
							<input type="password" asp-for="Input.Password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Password">
							<span asp-validation-for="Input.Password" class="text-danger"></span>
						</div>
						<div class="mt-3">
							<button
								class="btn btn-block btn-lg font-weight-medium auth-form-btn" type="submit">SIGN IN</button>
						</div>
						<div class="text-center mt-4 font-weight-light">
							Don't have an account? <a asp-area="Identity" asp-page="Register" class="text-primary">Create</a>
						</div>
					</form>
				</div>
			</div>
		</div>


	</main>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
