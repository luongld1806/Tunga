@{
	ViewData["navBarMode"] = "navbar-normal";
	ViewData["ProfileNav"] = "active";
	UserInfo profile = ViewBag.Profile;
	int x2 = 2 + 2;
}
@model UserInfo

<style>
	.navbar {
		position:relative !important;
	}

</style>

<div>
	<main class="pt-5 bg-dark" style="background-image: url(/customer_asset/images/bg_1.jpg);background-position: center center;background-size: cover; min-height:100vh">
		<div class="row flex-grow w-75 m-auto">
			<div class="col-lg-6">
				<div class="user-avata-frame">
					<label for="select-avata" class="select-avata-overlay">
						<i class="fa-regular fa-image"></i>
					</label>
					<img id="avatar-holder" src="/images/@profile.Avatar" />
				</div>
			</div>
			<div class="col-lg-6 mx-auto">
				<div class="custom-form-style text-left p-5">
					<div class="brand-logo">
						<img src="../../assets/images/logo.svg" hidden>
					</div>
					<h4>Lets get started</h4>
					<form  class="woocommerce-form woocommerce-form-register register" method="post" enctype="multipart/form-data">
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>
						<input type="file" name="Avata" class="image-input-update" target-id="avatar-holder" hidden id="select-avata" />
						<div class="form-group">
							<label asp-for="@profile.Email" for="reg_email">
							</label>
							<span class="required">@profile.Email</span>
						</div>
						<div class="form-group">
							<label asp-for="@profile.DisplayName">
							</label>
							<span class="required">*</span>
							<input type="text"
								   class="form-control"
								   asp-for="DisplayName" autocomplete="user_name" value="@profile.DisplayName" />
							<span asp-validation-for="DisplayName" class="text-danger"></span>

						</div>
						<div class="form-group">
							<label asp-for="@profile.Sex">
							</label>
							<span class="required">*</span>
							@{
								SelectList selectSex = new SelectList(Html.GetEnumSelectList<Sex>(),"Value","Text", profile.Sex);
							}
							<Select class="custom-select form-control" asp-for="@profile.Sex" asp-items="selectSex">
							</Select>
							<span asp-validation-for="Sex" class="text-danger"></span>

						</div>
						<div class="form-group">
							<label asp-for="Address">
							</label>
							<span class="required">*</span>
							<input type="text"
								   class="form-control"
								   asp-for="Address" autocomplete="address" value="@profile.Address" />
							<span asp-validation-for="Address" class="text-danger"></span>

						</div>
						<div class="form-group">
							<label asp-for="@profile.PhoneNumber">
							</label>
							<span class="required">*</span>
							<input type="text"
								   class="form-control"
								   asp-for="PhoneNumber" autocomplete="phonenumber" value="@profile.PhoneNumber" />
							<span asp-validation-for="PhoneNumber" class="text-danger"></span>

						</div>
						<div class="form-group">
							<label>
								Old password
							</label>
							<span class="required">*</span>
							<input type="password"
								   class="form-control"
								   name="oldPassword" autocomplete="new-password" />
						</div>
						<div class="form-group">
							<label>
								New password
							</label>
							<span class="required">*</span>
							<input type="password"
								   class="form-control"
								   name="newPassword" autocomplete="new-password" />
						</div>
						<div class="form-group">
							<label> Confirm password
							</label>
							<span class="required">*</span>
							<input type="password"
								   class="form-control"
								   name="confirmPassword" autocomplete="new-password" />

						</div>

						<div class="clear"></div>

						<div class="mt-3">
							<button class="btn btn-block btn-lg font-weight-medium auth-form-btn" type="submit">
								Update account
							</button>
						</div>


					</form>
				</div>
			</div>
		</div>


	</main>

</div>



